<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Proxmox VM GUI</title>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<style>
body { padding:20px; background:#f9f9f9; font-size: 1rem; }
.card { border-radius:8px; box-shadow:0 0 5px rgba(0,0,0,0.1); margin-bottom:20px; }
.clone-block { margin-top:15px; padding:15px; border:1px solid #ccc; border-radius:8px; background:#fff; }
#console { background:#000; color:#0f0; padding:10px; height:400px; overflow-y:auto; font-family:monospace; white-space:pre-wrap; border-radius:6px; }
#status { float:right; width:30%; }
#console-container { width:65%; float:left; }
</style>
</head>
<body>
<div class="container-fluid">
<h2>Stackflow Tool for VM Creation on Proxmox</h2>

<div class="row">
  <div id="console-container">
    <form id="vmForm">
      <div class="card p-3">
        <h4>Base VM</h4>
        <div class="row g-3 mb-2">
          <div class="col-md-4">
            <label class="form-label">Base VM Type</label>
            <select class="form-select" name="base_vm_type" required>
              <option value="new">New VM</option>
              <option value="template">Template</option>
            </select>
          </div>
        </div>
        <div class="row g-3 mb-2">
          <div class="col-md-4">
            <label class="form-label">Storage</label>
            <select class="form-select" name="storage" required>
              {% for s in storage %}
              <option value="{{ s }}">{{ s }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Image</label>
            <select class="form-select" name="image" required>
              {% for img in images %}
              <option value="{{ img }}">{{ img }}</option>
              {% endfor %}
            </select>
          </div>
          <div class="col-md-4">
            <label class="form-label">Target Node</label>
            <select class="form-select" name="target_node" required>
              {% for n in nodes %}
              <option value="{{ n }}">{{ n }}</option>
              {% endfor %}
            </select>
          </div>
        </div>
        <div class="row g-3 mb-2">
          <div class="col-md-3"><label>VM ID</label><input type="number" class="form-control" name="vmid" value="1000" required></div>
          <div class="col-md-5"><label>VM Name</label><input type="text" class="form-control" name="vmname" value="Template-ubuntu" required></div>
          <div class="col-md-4"><label>Memory</label><input type="number" class="form-control" name="memory" value="4096" required></div>
        </div>
        <div class="row g-3 mb-2">
          <div class="col-md-3"><label>CPU Cores</label><input type="number" class="form-control" name="cores" value="2" required></div>
          <div class="col-md-3"><label>Disk Size (GB)</label><input type="number" class="form-control" name="disksize" value="20" required></div>
          <div class="col-md-3"><label>IP (CIDR)</label><input type="text" class="form-control" name="ipaddr" value="10.0.25.126/22" required></div>
          <div class="col-md-3"><label>Gateway</label><input type="text" class="form-control" name="gateway" value="10.0.24.1" required></div>
        </div>
        <div class="row g-3 mb-2">
          <div class="col-md-4"><label>SSH Port</label><input type="number" class="form-control" name="ssh_port" value="{{ ssh_port }}" required></div>
        </div>
      </div>

      <div class="card p-3">
        <h4>Clones</h4>
        <label>Number of Clones</label>
        <input type="number" class="form-control mb-2" id="clone_count" min="0" value="0">
        <div id="clones_container"></div>
      </div>

      <button type="submit" class="btn btn-primary mt-3">Create VM(s)</button>
    </form>

    <h4 class="mt-3">Live Console</h4>
    <div id="console">Waiting...</div>
  </div>

  <div id="status">
    <h4>VM Status</h4>
    <ul id="vm_status" class="list-group"></ul>
  </div>
</div>
</div>

<script>
const cloneCountInput = document.getElementById("clone_count");
const clonesContainer = document.getElementById("clones_container");
const form = document.getElementById("vmForm");
const consoleBox = document.getElementById("console");
const vmStatus = document.getElementById("vm_status");

// Clone blocks
cloneCountInput.addEventListener("input", () => {
  clonesContainer.innerHTML = "";
  const count = parseInt(cloneCountInput.value || 0);
  for (let i=1;i<=count;i++){
    const div = document.createElement("div");
    div.className = "clone-block";
    div.innerHTML = `
      <h5>Clone ${i}</h5>
      <div class="row g-2">
        <div class="col-md-2"><input class="form-control" name="clone_${i}_vmid" placeholder="VM ID" required></div>
        <div class="col-md-2"><input class="form-control" name="clone_${i}_vmname" placeholder="Name" required></div>
        <div class="col-md-2"><input class="form-control" name="clone_${i}_ipaddr" placeholder="IP" required></div>
        <div class="col-md-2"><input class="form-control" name="clone_${i}_memory" value="4096" required></div>
        <div class="col-md-1"><input class="form-control" name="clone_${i}_cores" value="2" required></div>
        <div class="col-md-1"><input class="form-control" name="clone_${i}_disksize" value="20" required></div>
        <div class="col-md-2">
          <select class="form-select" name="clone_${i}_target_node" required>
            {% for n in nodes %}
            <option value="{{ n }}">{{ n }}</option>
            {% endfor %}
          </select>
        </div>
      </div>`;
    clonesContainer.appendChild(div);
  }
});

// Submit form via AJAX
form.addEventListener("submit", async e=>{
  e.preventDefault();
  consoleBox.textContent = "Starting playbook...\n";
  vmStatus.innerHTML = "";

  const data = Object.fromEntries(new FormData(form).entries());
  data.clones = [];
  const count = parseInt(cloneCountInput.value || 0);
  for(let i=1;i<=count;i++){
    data.clones.push({
      clonevmid: data[`clone_${i}_vmid`],
      clonevmname: data[`clone_${i}_vmname`],
      cloneipaddr: data[`clone_${i}_ipaddr`],
      clonememory: data[`clone_${i}_memory`],
      clonecores: data[`clone_${i}_cores`],
      clonedisksize: data[`clone_${i}_disksize`],
      clonetarget_node: data[`clone_${i}_target_node`]
    });
  }

  // Send to backend
  const res = await fetch("/run",{
    method:"POST",
    headers:{"Content-Type":"application/json"},
    body:JSON.stringify(data)
  });
  const json = await res.json();
  const vars_file = json.vars_file;

  // Stream console
  const es = new EventSource(`/stream/${vars_file}`);
  es.onmessage = e=>{ consoleBox.textContent += e.data + "\n"; consoleBox.scrollTop = consoleBox.scrollHeight; }
  es.onerror = ()=>es.close();

  // Update VM status every 5s
  const interval = setInterval(async ()=>{
    const statusRes = await fetch(`/status/${vars_file}`);
    const vms = await statusRes.json();
    vmStatus.innerHTML = "";
    vms.forEach(v=>{
      const li = document.createElement("li");
      li.className = "list-group-item";
      li.textContent = `${v.vmname} (${v.ipaddr})`;
      li.style.color = v.status==="green"?"green":"red";
      vmStatus.appendChild(li);
    });
  },5000);
});
</script>
</body>
</html>

