<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>StackFlow Virtualization Manager(SVM)</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
.status-ONLINE { color: green; font-weight: bold; }
.status-OFFLINE { color: red; font-weight: bold; }
.card-header { font-weight: bold; }
</style>
</head>
<body>
<div class="container-fluid mt-3">

<!-- TOP BAR -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>StackFlow Virtualization Manager(SVM) Dashboard</h3>
    <div>
        <span class="me-3">Logged in as <strong>{{ username }}</strong> ({{ role }})</span>
        <a href="{{ url_for('logout') }}" class="btn btn-outline-danger btn-sm">Logout</a>
    </div>
</div>

<!-- ACTION BUTTONS -->
<div class="mb-3">
    <a href="{{ url_for('vm_form') }}" class="btn btn-primary">Create VM</a>
    <form action="{{ url_for('add_vm') }}" method="POST" class="d-inline">
        <input type="hidden" name="vmid" value="101">
        <input type="hidden" name="vmname" value="Test-VM">
        <input type="hidden" name="ipaddr" value="10.0.0.101">
        <input type="hidden" name="target_node" value="pve1">
        <input type="hidden" name="ssh_port" value="22">
        <button type="submit" class="btn btn-warning">Add VM Record</button>
    </form>
    <a href="{{ url_for('download_inventory') }}" class="btn btn-success ms-2">Download Inventory</a>
</div>

<div class="row">

    <!-- VM Table (Left) -->
    <div class="col-md-8">
        <div class="card mb-3">
            <div class="card-header">VM Status</div>
            <div class="card-body p-0">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>VM ID</th>
                            <th>VM Name</th>
                            <th>IP</th>
                            <th>Target Node</th>
                            <th>SSH Port</th>
                            <th>Status</th>
                            <th>Timestamp</th>
                            <th>Created By</th>
                            {% if role == 'admin' %}<th>Actions</th>{% endif %}
                        </tr>
                    </thead>
                    <tbody>
                    {% for vm in vms %}
                        <tr>
                            <td>{{ vm.vmid }}</td>
                            <td>{{ vm.vmname }}</td>
                            <td>{{ vm.ipaddr }}</td>
                            <td>{{ vm.target_node }}</td>
                            <td>{{ vm.ssh_port }}</td>
                            <td class="status-{{ vm.ssh_status }}">{{ vm.ssh_status }}</td>
                            <td>{{ vm.timestamp }}</td>
                            <td>{{ vm.created_by }}</td>
                            {% if role == 'admin' %}
                            <td>
                                <a href="{{ url_for('delete_vm', vmid=vm.vmid) }}"
                                   class="btn btn-sm btn-danger"
                                   onclick="return confirm('Delete VM {{ vm.vmid }}?')">
                                   Delete Record
                                </a>
                            </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- PAGINATION -->
        <nav aria-label="Page navigation">
          <ul class="pagination">
            {% for p in range(1, total_pages+1) %}
              <li class="page-item {% if p==page %}active{% endif %}">
                <a class="page-link" href="{{ url_for('dashboard', page=p, per_page=per_page) }}">{{ p }}</a>
              </li>
            {% endfor %}
          </ul>
        </nav>
    </div>

    <!-- Users Table (Right) -->
    {% if role=='admin' %}
    <div class="col-md-4">
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                Users
                <a href="{{ url_for('create_user') }}" class="btn btn-success btn-sm">Create User</a>
            </div>
            <div class="card-body p-0">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-light">
                        <tr><th>Username</th><th>Email</th><th>Role</th><th>Action</th></tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user[0] }}</td>
                            <td>{{ user[1] }}</td>
                            <td>{{ user[2] }}</td>
                            <td>
                                <a href="{{ url_for('modify_user', username=user[0]) }}"
                                   class="btn btn-sm btn-warning">Modify</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    {% endif %}

</div>
</div>
</body>
</html>

